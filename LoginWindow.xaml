<Window x:Class="CafeClient.Presentation.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CaféClient - Система учета клиентов кафе"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Width="400" Height="320"
        Background="#F7F7F7">
    <Grid>
        <Border Background="White" CornerRadius="10" Padding="30" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <StackPanel>
                <TextBlock x:Name="TitleBl" Text="CaféClient" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                <TextBlock Text="Система учета клиентов кафе" FontSize="14" HorizontalAlignment="Center" Margin="0,0,0,18"/>
                <TextBox x:Name="UsernameBox" Height="32" Margin="0,0,0,10" FontSize="14" />
                <PasswordBox x:Name="PasswordBox" Height="32" Margin="0,0,0,18" FontSize="14" />
                <Button x:Name="LoginButton" Content="Войти" Height="36" Background="#4CAF50" Foreground="White" FontWeight="Bold" Click="LoginButton_Click"/>
                <TextBlock x:Name="ErrorText" Foreground="Red" FontSize="12" Margin="0,12,0,0" TextAlignment="Center" Visibility="Collapsed"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
