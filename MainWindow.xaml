<Window x:Class="diplom.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:diplom"
        mc:Ignorable="d"
        Title="CaféClient"
        WindowStartupLocation="CenterScreen"
        Width="900" Height="600"
        Background="#F7F7F7"
        ResizeMode="CanMinimize">
    <Grid>
        <!-- Верхняя панель -->
        <DockPanel LastChildFill="False" Height="56" Background="#4CAF50" VerticalAlignment="Top">
            <TextBlock Text="CaféClient" Foreground="White" FontSize="22" FontWeight="Bold" Margin="24,0,0,0" VerticalAlignment="Center"/>
            <TextBlock x:Name="UserInfoText" Text="Администратор: Грачев Егор" Foreground="White" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,24,0" DockPanel.Dock="Right"/>
        </DockPanel>

        <!-- Основная область -->
        <Grid Margin="0,56,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Навигация -->
            <StackPanel Background="#F4F8F4" Grid.Column="0">
            <Button Content="Клиенты" Name="BtnClients" Margin="10" Height="40" Click="NavButton_Click"/>
            <Button Content="Заказы" Name="BtnOrders" Margin="10" Height="40" Click="NavButton_Click"/>
            <Button Content="Программа лояльности" Name="BtnLoyalty" Margin="10" Height="40" Click="NavButton_Click"/>
            <Button Content="Отчеты" Name="BtnReports" Margin="10" Height="40" Click="NavButton_Click"/>
            <Button Content="Настройки" Name="BtnSettings" Margin="10" Height="40" Click="NavButton_Click"/>
        </StackPanel>

            <!-- Контент -->
                    <ContentPresenter x:Name="MainContentPresenter" Grid.Column="1" Margin="16"/>

        </Grid>
    </Grid>
</Window>
