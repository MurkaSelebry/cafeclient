<Window x:Class="diplom.AddClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить клиента" Height="420" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Добавление клиента" FontSize="18" FontWeight="Bold" Margin="0,0,0,16"/>
        <StackPanel Grid.Row="1" VerticalAlignment="Top" >
            <Label Content="Имя:"/>
            <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="Фамилия:"/>
            <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="Телефон:"/>
            <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="Email:"/>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="Дата рождения:"/>
            <TextBox Text="{Binding BirthDate, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="Уровень лояльности:"/>
            <TextBox Text="{Binding LoyaltyLevelId, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="Бонусные баллы:"/>
            <TextBox Text="{Binding BonusPoints, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Сохранить" Width="100" Margin="0,0,8,0" Command="{Binding SaveCommand}"/>
            <Button Content="Отмена" Width="100" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window> 